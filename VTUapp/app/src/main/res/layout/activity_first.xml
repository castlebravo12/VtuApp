<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pankaj.vtuapp.First">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button8"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"

                android:text="Basic Electrical Engineering" />

            <Button
                android:id="@+id/button9"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:text="Basic Electronics" />

            <Button
                android:id="@+id/button11"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Computer Aided Engineering Drawing" />

            <Button
                android:id="@+id/button12"
                android:layout_width="270dp"
                android:layout_margin="50dp"
                android:layout_height="wrap_content"
                android:text="Computer Programming Laboratory" />

            <Button
                android:id="@+id/button13"
                android:layout_width="270dp"
                android:layout_margin="50dp"
                android:layout_height="wrap_content"
                android:text="CIP" />

            <Button
                android:id="@+id/button14"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Elements of Civil Engineering" />

            <Button
                android:id="@+id/button15"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="ELEMENTS OF MECHANICAL ENGINEERING" />

            <Button
                android:id="@+id/button16"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Engineering Mathematics" />
            <Button
                android:id="@+id/button17"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Engineering Chemistry" />
            <Button
                android:id="@+id/button18"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Engineering Chemistry Lab" />
            <Button
                android:id="@+id/button19"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Engineering Mathematics II" />
            <Button
                android:id="@+id/button20"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Engineering Phycics" />
            <Button
                android:id="@+id/button21"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Engineering Physics Lab " />
            <Button
                android:id="@+id/button22"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Environmental Studies" />
            <Button
                android:id="@+id/button23"
                android:layout_margin="50dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Programming in C and Data Structures" />

            <Button
                android:id="@+id/button24"
                android:layout_width="270dp"
                android:layout_margin="50dp"
                android:layout_height="wrap_content"
                android:text="Workshop Practice Lab" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
